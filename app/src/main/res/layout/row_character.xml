<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="character"
            type="github.dangalrio.com.exampledatabinding.model.WorldOfWarcraftModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin__normal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin__big">

            <ImageView
                android:id="@+id/rowCharacterImgMain"
                android:layout_width="0dp"
                android:layout_height="@dimen/character_photo_size"
                android:layout_marginLeft="@dimen/margin__normal"
                android:layout_marginStart="@dimen/margin__normal"
                android:layout_marginTop="@dimen/margin__normal"
                android:layout_marginBottom="@dimen/margin__normal"
                android:layout_marginRight="@dimen/margin__normal"
                android:layout_marginEnd="@dimen/margin__normal"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/rowCharacterLabelTitle"
                style="@style/CharacterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{character.name}"
                app:layout_constraintTop_toBottomOf="@+id/rowCharacterImgMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Arthas"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>